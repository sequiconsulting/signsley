{
  "name": "signsley",
  "version": "2.2.1",
  "description": "Advanced Digital Signature Verification Service with CRL/OCSP validation",
  "main": "index.html",
  "scripts": {
    "dev": "netlify dev",
    "build": "echo 'No build required'",
    "deploy": "netlify deploy --prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "audit:check": "npm audit --audit-level moderate",
    "docs": "jsdoc -c jsdoc.json"
  },
  "keywords": [
    "digital-signature",
    "pades",
    "xades",
    "cades",
    "pdf",
    "verification",
    "crl",
    "ocsp",
    "certificate-validation"
  ],
  "author": "Signsley",
  "license": "MIT",
  "dependencies": {
    "node-forge": "~1.3.1",
    "pdf-parse": "~1.1.1",
    "@xmldom/xmldom": "~0.8.10",
    "xpath": "~0.0.32",
    "asn1js": "~3.0.5",
    "pkijs": "~3.0.15",
    "pvtsutils": "~1.3.5",
    "pdfjs-dist": "~3.11.174",
    "axios": "~1.7.7",
    "node-cache": "~5.1.2",
    "dayjs": "~1.11.13",
    "asn1.js": "~5.4.1"
  },
  "devDependencies": {
    "netlify-cli": "^17.36.4",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "jsdoc": "^4.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "netlify/functions/**/*.js",
      "app.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}